{
    "language"        : "PYTHON",
    "experiment-name" : "xtrack2spear",
    "variables" : {
        "n_cells" : {
            "type" : "int",
            "size" : 1,
            "min": 5,
            "max": 400
        },
        "n_epochs" : {
            "type": "int",
            "size": 1,
            "min": 100,
            "max": 500
        },
        "emb_size" : {
            "type" : "int",
            "size" : 1,
            "min": 5,
            "max": 50
        },
        "opt_type" : {
            "type" : "ENUM",
            "size" : 1,
            "options": ["sgd", "adam"]
        },
        "lr" : {
            "type" : "float",
            "size" : 1,
            "min": 0.001,
            "max": 10
        },
        "p_drop" : {
            "type" : "float",
            "size" : 1,
            "min": 0.0,
            "max": 0.8
        },
        "mb_size" : {
            "type" : "int",
            "size" : 1,
            "min": 1,
            "max": 128
        }
    },
    "database": {
        "address": "10.10.24.131"
    },
    "resources" : {
        "cluster" : {
            "scheduler"         : "SGE",
            "max-concurrent"    : 2,
            "max-finished-jobs" : 10000
        }
    },
    "tasks": {
        "xtrack2" : {
            "type"       : "OBJECTIVE",
            "likelihood" : "GAUSSIAN",
            "main-file"       : "xtrack2_spearmint.py",
            "resources"  : ["cluster"]
        }
    }
}
